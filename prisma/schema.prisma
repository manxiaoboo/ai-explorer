generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tool {
  id                  String            @id @default(cuid())
  slug                String            @unique
  name                String
  tagline             String
  description         String
  website             String
  logo                String?
  metaTitle           String?
  metaDescription     String?
  ogImage             String?
  categoryId          String
  pricingTier         PricingTier       @default(FREE)
  priceStart          Float?
  priceEnd            Float?
  hasFreeTier         Boolean           @default(false)
  hasTrial            Boolean           @default(false)
  features            String[]
  useCases            String[]
  githubStars         Int?
  githubStarsGrowth7d Int?
  productHuntVotes    Int?
  trendingScore       Float             @default(0)
  isActive            Boolean           @default(true)
  isFeatured          Boolean           @default(false)
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  avgTimeOnPage       Int               @default(0)
  clickCount          Int               @default(0)
  clickCount7d        Int               @default(0)
  githubRepo          String?
  hfDownloads         Int?
  hfDownloadsGrowth7d Int?
  hfLikes             Int?
  hfModelId           String?
  productHuntId       String?
  saveCount           Int               @default(0)
  logoType            String?
  newsMentions        NewsToolMention[]
  priceHistory        PriceHistory[]
  pricingPlans        PricingPlan[]
  category            Category          @relation(fields: [categoryId], references: [id])
  clicks              ToolClick[]
  saves               ToolSave[]
  tags                Tag[]             @relation("TagToTool")

  @@index([categoryId])
  @@index([pricingTier])
  @@index([trendingScore])
  @@index([isActive])
  @@index([githubRepo])
  @@index([hfModelId])
}

model ToolClick {
  id        String   @id @default(cuid())
  toolId    String
  ipHash    String?
  userAgent String?
  referrer  String?
  createdAt DateTime @default(now())
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@index([toolId, createdAt])
  @@index([createdAt])
}

model ToolSave {
  id        String   @id @default(cuid())
  toolId    String
  ipHash    String
  createdAt DateTime @default(now())
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([toolId, ipHash])
  @@index([toolId])
}

model Category {
  id              String   @id @default(cuid())
  slug            String   @unique
  name            String
  description     String
  icon            String?
  sortOrder       Int      @default(0)
  metaTitle       String?
  metaDescription String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  tools           Tool[]
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  tools Tool[] @relation("TagToTool")
}

model PriceHistory {
  id          String      @id @default(cuid())
  toolId      String
  price       Float?
  pricingTier PricingTier
  recordedAt  DateTime    @default(now())
  tool        Tool        @relation(fields: [toolId], references: [id])

  @@index([toolId])
  @@index([recordedAt])
}

model PricingPlan {
  id        String   @id @default(cuid())
  toolId    String
  name      String
  price     Float?
  priceUnit String   @default("month")
  features  String[]
  isPopular Boolean  @default(false)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@index([toolId])
  @@index([sortOrder])
}

model News {
  id              String            @id @default(cuid())
  slug            String            @unique
  title           String
  excerpt         String
  content         String
  coverImage      String?
  metaTitle       String?
  metaDescription String?
  isPublished     Boolean           @default(false)
  publishedAt     DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  originalUrl     String?
  source          String?
  status          NewsStatus?       @default(PENDING)
  mentions        NewsToolMention[]

  @@index([status])
  @@index([isPublished])
  @@index([publishedAt])
}

model NewsToolMention {
  id        String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  newsId    String
  toolId    String
  mentions  Int      @default(1)
  createdAt DateTime @default(now()) @db.Timestamp(6)
  news      News     @relation(fields: [newsId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([newsId, toolId])
  @@index([newsId])
  @@index([toolId])
}

enum NewsStatus {
  PENDING
  REVIEWED
  PUBLISHED
  REJECTED
}

enum PricingTier {
  FREE
  FREEMIUM
  PAID
  ENTERPRISE
  OPEN_SOURCE
}
