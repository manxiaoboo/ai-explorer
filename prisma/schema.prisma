generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tool {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  tagline     String
  description String
  website     String
  logo        String?

  // SEO
  metaTitle       String?
  metaDescription String?
  ogImage         String?

  // Categorization
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  tags        Tag[]

  // Pricing
  pricingTier PricingTier @default(FREE)
  priceStart  Float?
  priceEnd    Float?
  hasFreeTier Boolean     @default(false)
  hasTrial    Boolean     @default(false)

  // Features
  features    String[]
  useCases    String[]

  // External platform IDs
  githubRepo      String?  // owner/repo format
  hfModelId       String?  // Hugging Face model ID
  productHuntId   String?  // Product Hunt post ID

  // Metrics
  githubStars     Int?
  githubStarsGrowth7d Int?
  productHuntVotes Int?
  
  // Hugging Face metrics
  hfDownloads     Int?
  hfLikes         Int?
  hfDownloadsGrowth7d Int?
  
  // Own platform metrics
  clickCount      Int      @default(0)
  clickCount7d    Int      @default(0)
  saveCount       Int      @default(0)
  avgTimeOnPage   Int      @default(0)  // seconds
  
  trendingScore   Float    @default(0)

  // Status
  isActive    Boolean  @default(true)
  isFeatured  Boolean  @default(false)

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Price history
  priceHistory PriceHistory[]
  
  // Click tracking
  clicks ToolClick[]
  saves ToolSave[]

  @@index([categoryId])
  @@index([pricingTier])
  @@index([trendingScore])
  @@index([isActive])
  @@index([githubRepo])
  @@index([hfModelId])
}

model ToolClick {
  id        String   @id @default(cuid())
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
  toolId    String
  ipHash    String?  // Hashed IP for deduplication
  userAgent String?
  referrer  String?
  createdAt DateTime @default(now())

  @@index([toolId, createdAt])
  @@index([createdAt])
}

model ToolSave {
  id        String   @id @default(cuid())
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
  toolId    String
  ipHash    String   // For deduplication (one save per IP)
  createdAt DateTime @default(now())

  @@unique([toolId, ipHash])
  @@index([toolId])
}

model Category {
  id          String @id @default(cuid())
  slug        String @unique
  name        String
  description String
  icon        String?
  sortOrder   Int    @default(0)
  tools       Tool[]

  // SEO
  metaTitle       String?
  metaDescription String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  tools Tool[]
}

model PriceHistory {
  id        String   @id @default(cuid())
  tool      Tool     @relation(fields: [toolId], references: [id])
  toolId    String
  price     Float?
  pricingTier PricingTier
  recordedAt DateTime @default(now())

  @@index([toolId])
  @@index([recordedAt])
}

model News {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String
  content     String
  coverImage  String?
  
  // SEO
  metaTitle       String?
  metaDescription String?
  
  // Status
  isPublished Boolean @default(false)
  publishedAt DateTime?
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([isPublished])
  @@index([publishedAt])
}

enum PricingTier {
  FREE
  FREEMIUM
  PAID
  ENTERPRISE
  OPEN_SOURCE
}
